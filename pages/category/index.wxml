<!-- 分类 -->
<view class="cates">
    <SearchInput>搜索</SearchInput>
    
    <view class="cates_content">
        <!-- 左侧菜单 -->
        <scroll-view class="left_menu" scroll-y="false">
            <view class="menu_item {{index === currentIndex ? 'active' : ''}}"
            wx:for="{{leftMenuList}}"
            wx:key="*this"
            bindtap = 'handleItemTap'
            data-index = "{{index}}">
                {{item}}
            </view>
        </scroll-view>
        <!-- 右侧商品内容 -->
        <scroll-view class="right_content" scroll-x="false"  scroll-top="{{scrollTop}}">
            <view class="goods_group"
            wx:for="{{rightContent}}"
            wx:for-item="item1"
            wx:for-index="index1">
                <view class="goods_title">
                    <text class="delimiter">/</text>
                    <text class="title">{{item1.cat_name}}</text>
                    <text class="delimiter">/</text>
                </view>
                <view class="goods_list">
                    <navigator
                    wx:for="{{item1.children}}"
                    wx:for-index="index2"
                    wx:for-item="item2"
                    wx:key="cat_id"
                    url="/pages/goods_list/index?cid={{cat_id}}">
                        <image src="{{item2.cat_icon}}" mode="widthFix"></image>
                        <view class="goods_name">{{item2.cat_name}}</view>
                    </navigator>
                </view>
            </view>
        </scroll-view>
    </view>
</view>
  
